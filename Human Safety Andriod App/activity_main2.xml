<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
    tools:context=".Main3Activity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/editText7"
        android:layout_centerInParent="true"
        android:text="Login"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:id="@+id/editText8"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/button3"
        android:layout_centerInParent="true"
        android:text="Already have an account?"
        android:inputType="textPersonName"
        android:id="@+id/editText7"
        android:layout_marginTop="38dp"
        android:ems="10"/>

    <Button
        android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerInParent="true" android:text="Sign In" android:id="@+id/button3" android:layout_marginTop="20dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerInParent="true" android:inputType="textPassword" android:id="@+id/editText4" android:ems="10" android:layout_above="@id/button3" android:hint="Confirm Password"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerInParent="true" android:inputType="textPassword" android:id="@+id/editText3" android:ems="10" android:layout_above="@id/editText4" android:hint="Enter Password"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerInParent="true" android:inputType="textEmailAddress" android:id="@+id/editText5" android:ems="10" android:layout_above="@id/editText3" android:hint="Email"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerInParent="true" android:inputType="phone" android:id="@+id/editText2" android:ems="10" android:layout_above="@id/editText5" android:hint="Phone no"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerInParent="true" android:inputType="textPersonName" android:id="@+id/editText" android:ems="10" android:layout_above="@id/editText2" android:hint="Name"/>

</RelativeLayout>